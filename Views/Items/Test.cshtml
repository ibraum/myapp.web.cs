@{
	var message = "Hello";
	var testItems = new List<String> { "I'm KONDO Ibrahim", "I'm a developper", "I'm studying at ESGIS since 2022" };
	var isLoggedIn = true;
}

<h1>@message</h1>
<ul>
	@foreach (var item in testItems)
	{
		<li>@item</li>
	}
</ul>

@if(isLoggedIn)
{
	<button class="bg-warning border-0 rounded-1 py-2 px-3 text-black shadow">Active - @isLoggedIn</button>
} 
else {
	<button class="bg-danger border-0 rounded-1 py-2 px-3 text-white shadow">Active - @isLoggedIn</button>
}
